import { useState } from "react";
import { Card, CardContent } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Avatar } from "@/components/ui/avatar";

export default function SocialNetwork() {
  const [posts, setPosts] = useState([
    { id: 1, user: "Alice", avatar: "ðŸ§‘â€ðŸŽ¨", content: "ä»Šå¤©å¤©æ°£çœŸå¥½ï¼" },
    { id: 2, user: "Bob", avatar: "ðŸ§‘â€ðŸš€", content: "æˆ‘å‰›åƒäº†å¥½åƒçš„æ‹‰éºµ ðŸœ" }
  ]);
  const [newPost, setNewPost] = useState("");

  const handlePost = () => {
    if (!newPost.trim()) return;
    setPosts([{ id: Date.now(), user: "ä½ ", avatar: "ðŸ˜€", content: newPost }, ...posts]);
    setNewPost("");
  };

  return (
    <div className="max-w-xl mx-auto p-4 space-y-4">
      <h1 className="text-2xl font-bold text-center">ç¤¾äº¤ç¶²è·¯</h1>
      <div className="flex gap-2">
        <Input
          placeholder="ä½ åœ¨æƒ³ä»€éº¼ï¼Ÿ"
          value={newPost}
          onChange={(e) => setNewPost(e.target.value)}
        />
        <Button onClick={handlePost}>ç™¼ä½ˆ</Button>
      </div>

      <div className="space-y-2">
        {posts.map((post) => (
          <Card key={post.id}>
            <CardContent className="flex items-start gap-4 p-4">
              <Avatar className="text-2xl">{post.avatar}</Avatar>
              <div>
                <div className="font-semibold">{post.user}</div>
                <div>{post.content}</div>
              </div>
            </CardContent>
          </Card>
        ))}
      </div>
    </div>
  );
}
